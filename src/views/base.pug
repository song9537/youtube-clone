doctype html 
html(lang="en")
    head 
        title #{pageTitle} | Wetube
    body 
        header 
            h1=pageTitle 
            nav 
                ul 
                    li 
                        a(href="/videos/upload") Upload Video
                    if loggedIn 
                        li 
                            a(href="/logout") Log out
                        li 
                            a(href="/my-profile") #{loggedInUser.name}'s Profile
                    else
                        li 
                            a(href="/join") Join
                        li 
                            a(href="/login") Login
                    li 
                        a(href="/") Home
                    li 
                        a(href="/search") Search
        main 
            block content
    include partials/footer.pug