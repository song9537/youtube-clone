doctype html 
html(lang="en")
    head 
        title #{pageTitle} | Wetube
    body 
        header 
            h1=pageTitle 
            nav 
                ul 
                    if loggedIn 
                        li 
                            a(href="/users/logout") Log out
                        li 
                            a(href="/users/edit") #{loggedInUser.name}'s Profile
                        li 
                            a(href="/videos/upload") Upload Video   
                    else
                        li 
                            a(href="/join") Join
                        li 
                            a(href="/login") Login
                    li 
                        a(href="/") Home
                    li 
                        a(href="/search") Search
        main 
            block content
    include partials/footer.pug